<h1>
    Edit Story
</h1> 
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
 <input type="hidden" value="PUT" name="_method">
    <div class="row">
        <div class="input-field">
            <input type="text" name="title" value="{{story.title}}">
            <label for="title">Title</label>
        </div>
    </div>
    
    <div class="row">
        <div class="input-field">
            {{#select story.status}}
           <select name="status">
            <option value="public" selected>Public</option>
            <option value="private">Private</option>
            <option value="unpublished">Unpublished</option>
                   {{/select}}</select>          
             <label for="status">Status</label>
        </div>
    </div>
    <div class="row">
        <p>
            <input type="checkbox" name="allowComments" class="filled-in" id="filled-inbox" {{#if story.allowComments}} checked="checked"{{/if}}>
            <label for="filled-inbox">Allow Comments</label>
        </p>
    </div>
     <div class="row">
        <div class="input-field">
          <h5>Tell Us Your Story</h5>
          <textarea name="body">{{story.body}}</textarea>
        </div>
    </div>
    <input type="submit" value="Save" class="btn">
    </form>
</div>